<div class="container-fluid col-4">
    <form action="/users/save" method="post">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" name="name" id="nome" placeholder="Digite seu Nome...">
        </div>
        <div class="form-group">
            <label for="idade">Idade:</label>
            <input type="text" class="form-control" name="age" id="idade" placeholder="Digite sua idade...">
        </div>
        <div class="form-group">
            <label for="email">E-mail:</label>
            <input type="text" class="form-control" name="email" id="email" placeholder="Digite seu e-mail...">
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>